extends layout

block content 
  section.container
    h1.header= title
    article.item
      form.form(method="post", action="/update/" + data._id+"?_method=PUT")
        fieldset
          div
            input(type="text" name="productType" placeholder="Tipo de producto" required value=data.productType)
          div
            input(type="text" name="name" placeholder="Nombre del producto" required value=data.name)
          div
            input(type="text" name="description" placeholder="Descripción" required value=data.description)
          div
            input(type="text" name="price" placeholder="Precio" required value=data.price)
          div
            input(type="text" name="material" placeholder="Material con que está hecho" required value=data.material)
          div
            input(type="text" name="color" placeholder="Color" required value=data.color)
          div
            input(type="text" name="model" placeholder="Modelo del producto" required value=data.model)
          div
            input(type="text" name="category" placeholder="Categoría" required value=data.category)
          div
            input(type="text" name="image" placeholder="URL de la imagen" required value=data.image)
          div
            input.button.add(type="submit",value="Editar")
    a.button.show(href="/products") Inicio